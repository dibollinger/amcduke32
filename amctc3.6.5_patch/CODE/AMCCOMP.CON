// JAMES' EQUIPMENT SCREEN

defstate SCROLL_POS
	set DISP_TEMP SCROLL_POSITION
	mulvar DISP_TEMP 7
	sub GUI_POS_Y DISP_TEMP
ends

defstate SCROLL_WHEEL
getinput[].bits DISP_TEMP2
shiftvarr DISP_TEMP2 8
andvar DISP_TEMP2 0xF
	switch DISP_TEMP2
		case 11
			ifl SCROLL_POSITION 20
			add SCROLL_POSITION 1
			break
		case 12
			ifg SCROLL_POSITION 0
			sub SCROLL_POSITION 1
			break
	endswitch

set DISP_TEMP3 SCROLL_POSITION
mulvar DISP_TEMP3 6
set DISP_TEMP4 48
add DISP_TEMP4 DISP_TEMP3
rotatesprite 87 DISP_TEMP4 8192 0 13717 0 0 0 0 0 xdim ydim 

	set GUI_POS_X 87
	set GUI_POS_Y DISP_TEMP4

		state CURSOR_OVER_ITEM
		ifl GUI_POS_X_TEMP 10
		 ifg GUI_POS_X_TEMP -10
		  ifl GUI_POS_Y_TEMP 13
		   ifg GUI_POS_Y_TEMP -13
			{
			rotatesprite 87 DISP_TEMP4 8192 0 13717 DISP_PULSE 0 0 0 0 xdim ydim 
			ifand BITS_PRESS 4 set GUI_ELEMENT_LOCKED 1
			}
			
	ife GUI_ELEMENT_LOCKED 1
		{
		rotatesprite 87 DISP_TEMP4 7492 0 13717 0 16 0 0 0 xdim ydim 
		ifg input[].horz 0
		 ifg SCROLL_POSITION 0
			{
			ifcount 2
				{
				sub SCROLL_POSITION 1
				resetcount
				}
			}
		else
		ifl input[].horz 0
		 ifl SCROLL_POSITION 20
			{
			ifcount 2
				{
				add SCROLL_POSITION 1
				resetcount
				}
			}
		ifand BITS_PRESS 4 nullop else set GUI_ELEMENT_LOCKED 0
		}
ends

